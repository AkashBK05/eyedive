<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".UserChangePasswordActivity">

    <TextView
        android:id="@+id/user_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password:"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_marginLeft="17dp"
        />

    <EditText
        android:id="@+id/user_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_change_password"
        android:hint="Enter old password"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/user_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_old_password"
        android:hint="Enter new password"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/input_design"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/change_user_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_new_password"
        android:text="Apply Changes"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="18dp"
        android:background="@drawable/buttons"
        android:padding="12dp"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        />


</RelativeLayout>